<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText 
        android:id="@+id/dialogEditUser"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:text=""
        />
       

        
        <Button 
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialogButtonDuzenle"
            android:text="@string/dialogButtonDuzenle"
            android:layout_below="@+id/dialogEditUser"
            android:layout_alignParentLeft="true"
            />
        
        <Button 
            android:layout_width="90dp"
            android:id="@+id/dialogButtonSil"
            android:layout_height="wrap_content"
            android:text="@string/dialogButtonSil"
            android:layout_below="@+id/dialogEditUser"
            android:layout_centerInParent="true"
            />
        
        <Button
            android:layout_width="90dp"
            android:id="@+id/dialogButtonEditBack"
            android:layout_height="wrap_content"
            android:text="@string/geridon"
            android:layout_below="@+id/dialogEditUser"
            android:layout_alignParentRight="true"
            />
            

    

</RelativeLayout>