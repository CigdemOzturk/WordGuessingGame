<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dessertbg"
    >

    
        
        <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/dly"
       >
        
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/total_dessert"
            android:textStyle="bold"
            android:layout_weight="2" 
            android:background="@color/pink"
            android:textColor="@color/middlepink"
          
            />
        
        <TextView 
            android:layout_width="fill_parent"
            android:id="@+id/complete"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="2" 
            android:background="@color/pink"
            android:textColor="@color/middlepink"
         
            />
        
        <TextView 
            android:layout_width="fill_parent"
            android:id="@+id/total_score"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/pink"
            android:textColor="@color/middlepink"
          />
        
    </LinearLayout>
    
        <View 
  			android:layout_width="fill_parent"
   			android:layout_height="2dp"       
   			android:background="#ffffffff"
   			android:id="@+id/drawline"
   			android:layout_below="@+id/dly"/>
        

        <ListView
            android:id="@+id/dessertlist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:layout_below="@+id/drawline"
            android:background="@color/pink">
        </ListView>
        
        <Button
            android:id="@+id/dessertback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" 
            android:layout_alignParentRight="true"
            android:text="@string/geridon"
            android:background="@color/middlepink"
            android:textStyle="bold"/>
 
</RelativeLayout>